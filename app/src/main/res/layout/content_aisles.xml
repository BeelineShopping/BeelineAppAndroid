<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.beelineshopping.beelineandroidapp.Aisles">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aisle 1"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignRight="@+id/sectionOne"
        android:layout_alignEnd="@+id/sectionOne" />

    <ListView
        android:id="@+id/sectionOne"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_alignParentEnd="true"
        ></ListView>

    <ListView
        android:id="@+id/sectionTwo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_below="@+id/sectionOne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:divider="@null"
        android:dividerHeight="0dp"></ListView>

    <ListView
        android:id="@+id/sectionThree"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@drawable/whiteborder"
        android:layout_below="@+id/sectionTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:divider="@null"
        android:dividerHeight="0dp"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Aisle"
        android:id="@+id/nextButton"
        android:layout_below="@+id/sectionThree"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
